        <class>io.github.fd_education.jakartaonlineshop.model.entities.CartProduct</class>
        <class>io.github.fd_education.jakartaonlineshop.model.entities.Category</class>
        <class>io.github.fd_education.jakartaonlineshop.model.entities.Order</class>
        <class>io.github.fd_education.jakartaonlineshop.model.entities.OrderProduct</class>
        <class>io.github.fd_education.jakartaonlineshop.model.entities.OrderStatus</class>
        <class>io.github.fd_education.jakartaonlineshop.model.entities.Product</class>
        <class>io.github.fd_education.jakartaonlineshop.model.entities.Wishlist</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/jak_onlineshop"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="onlineshop_user"/>
            <property name="hibernate.connection.password" value="shop_12345"/>
        </properties>
    </persistence-unit>
</persistence>
